<?xml version="1.0" encoding="UTF-8" ?>
<configuration status="warn">
    <Properties>
        <Property name="LOG_PATTERN" value="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        <Property name="CARTELLA_DESTINAZIONE" value="C:\Users\conta\Desktop\log4j2"/>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <LevelRangeFilter minLevel="FATAL" maxLevel="DEBUG"/>
        </Console>
        <RollingFile name="rolling" fileName="${CARTELLA_DESTINAZIONE}/rolling.log" filePattern="${CARTELLA_DESTINAZIONE}/app-%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
            <LevelRangeFilter minLevel="FATAL" maxLevel="DEBUG"/>
        </RollingFile>
        <File name="file" fileName="${CARTELLA_DESTINAZIONE}/file.log" append="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <LevelRangeFilter minLevel="DEBUG" maxLevel="DEBUG"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="dev.antoniogrillo.esempiocinecaavanzato">
            <AppenderRef ref="rolling"/>
            <AppenderRef ref="file"/>
        </Logger>
        <Root level="trace">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</configuration>